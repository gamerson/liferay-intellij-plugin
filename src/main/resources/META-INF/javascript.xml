<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <!-- Injects JavaScript language into Liferay specific taglibs (like <aui:script> or <aui:a onClick="">) -->
        <multiHostInjector implementation="com.liferay.ide.idea.language.tag.LiferayTaglibJavascriptLanguageInjector"/>
    </extensions>

    <extensions defaultExtensionNs="JavaScript">
        <!-- Provide predefined JavaScript Libraries for Liferay -->
        <predefinedLibraryProvider implementation="com.liferay.ide.idea.language.javascript.LiferayJSPredefinedLibraryProvider"/>
    </extensions>

</idea-plugin>